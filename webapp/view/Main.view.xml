<mvc:View
	controllerName="com.myorg.myapp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">

	<Page
		title="{i18n>APP_TITLE}"
		id="page">
		<content>
			<IllustratedMessage
				title="{i18n>APP_TITLE}"
				illustrationType="sapIllus-SuccessHighFive"
				enableVerticalResponsiveness="true"
				description="{i18n>APP_DESCRIPTION}">
			</IllustratedMessage>
		</content>
	</Page>

</mvc:View>
