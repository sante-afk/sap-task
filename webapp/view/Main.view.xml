<mvc:View
	controllerName="com.myorg.myapp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:mdc="sap.ui.mdc"
	core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">
	<f:DynamicPage
		id="page"
		headerExpanded="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title 
						text="{i18n>APP_TITLE}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader>
				<f:content>
					<mdc:FilterBar>
						<mdc:filterItems>

							<mdc:FilterField
								visible="true">
								<Input
									id="taskName"
									placeholder="Enter Task Name"
									liveChange=""/>
							</mdc:FilterField>

							<mdc:FilterField
								visible="true">
								<Select
									id="category"
									name="Category"
									change=""/>
							</mdc:FilterField>

							<mdc:FilterField
								visible="true">
								<DateRangeSelection
									id="date"
									name="Date"
									placeholder="Select Date"
									dateValue=""
									secondDateValue=""/>
							</mdc:FilterField>
							
						</mdc:filterItems>
							
					</mdc:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
		</f:content>
	</f:DynamicPage>
</mvc:View>
